      "bundleIdentifier": "com.stefan.streaky",
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "buildNumber": "2" // üî• iOS build number
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/app_icon.png",
        "backgroundColor": "#40b8a5" // üî• –ü—Ä–æ–º–µ–Ω–µ—Ç–æ –¥–∞ —Å–µ —Å–æ–≤–ø–∞—ì–∞ —Å–æ splash
